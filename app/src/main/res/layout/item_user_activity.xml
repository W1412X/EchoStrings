<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:fontFamily="@font/zkklt"
                android:textSize="16sp"
                tools:text="【吉他教学】快速掌握扫弦技巧的5个秘诀"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_meta_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:fontFamily="@font/zkklt"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:text="投稿 · 2小时前" />

            <!-- 互动数据 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_meta_info"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/like"
                    app:tint="@color/yello_200" />

                <TextView
                    android:fontFamily="@font/zkklt"
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/yello_200"
                    android:textSize="13sp"
                    tools:text="1.2万" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/comment"
                    app:tint="@color/yello_200" />

                <TextView
                    android:id="@+id/tv_comments"
                    android:fontFamily="@font/zkklt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/yello_200"
                    android:textSize="13sp"
                    tools:text="358" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>