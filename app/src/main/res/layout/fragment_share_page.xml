<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SharePageFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/share_page_top_choice_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="30dp"
                    android:layout_height="8px"
                    android:background="#fdb904"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比赛"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="30dp"
                    android:layout_height="8px"
                    android:background="#fdb904"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/share_page_top_choice_container">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.android.echostrings.components.Post
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.android.echostrings.components.Post
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.android.echostrings.components.Post
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.android.echostrings.components.Post
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.android.echostrings.components.Post
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>